<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp"
    android:background="@drawable/item_listview_bg"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImgCauThu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:scaleType="centerCrop"
        app:cardCornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgCauThu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_bg"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/deappool" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvTenCauThuDB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:padding="2dp"
        android:text="Deadpool"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/cvImgCauThu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTenCLBDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:text="Ten cau lac bo"
        android:textSize="16sp"
        android:textColor="@color/purple_700"
        app:layout_constraintStart_toEndOf="@+id/cvImgCauThu"
        app:layout_constraintTop_toBottomOf="@+id/tvTenCauThuDB" />

    <TextView
        android:id="@+id/tvPhutThu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/tvSuKien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSuKien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Noi dung su kien"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTenCLBDB" />


</androidx.constraintlayout.widget.ConstraintLayout>