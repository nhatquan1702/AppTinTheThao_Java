<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.ThongTinCLBActivity"
    android:id="@+id/nestedScroll"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgViewCLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/txtTenCLB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:text="ĐỘI BÓNG THIẾU LÂM"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartCLB"
            android:layout_width="match_parent"
            android:layout_height="252dp">

        </com.github.mikephil.charting.charts.PieChart>

        <TextView
            android:id="@+id/txtUpcomming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Trận Đấu Sắp Tới:" />

        <ListView
            android:id="@+id/listViewUpcomming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

        </ListView>

        <TextView
            android:id="@+id/txtLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Các Trận Đấu Gần Nhất:" />

        <ListView
            android:id="@+id/listViewLastMatches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

        </ListView>

        <TextView
            android:id="@+id/txtCauThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Các Cầu Thủt:" />

        <ListView
            android:id="@+id/listViewDSCauThu"
            android:layout_width="match_parent"
            android:layout_height="592dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#DDDDDD"
            android:divider="@android:color/transparent"
            android:dividerHeight="10dp">

        </ListView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>